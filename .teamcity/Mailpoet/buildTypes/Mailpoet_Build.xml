<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="1742ad2d-1c07-4783-87d4-22489d1beb81" xsi:noNamespaceSchemaLocation="http://www.jetbrains.com/teamcity/schemas/2017.2/project-config.xsd">
  <name>Build</name>
  <description />
  <settings>
    <options>
      <option name="artifactRules" value="mailpoet.zip" />
    </options>
    <parameters />
    <build-runners order="RUNNER_7, RUNNER_8, RUNNER_9, RUNNER_10, RUNNER_11, RUNNER_6, RUNNER_3">
      <runner id="RUNNER_7" name="Install Composer" type="simpleRunner">
        <parameters>
          <param name="script.content" value="curl -sS https://getcomposer.org/installer | php" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_8" name="Install composer.phar" type="simpleRunner">
        <parameters>
          <param name="script.content" value="./composer.phar install" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_9" name="Install dependencies" type="simpleRunner">
        <parameters>
          <param name="script.content" value="./do install" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_10" name="Update Dependencies" type="simpleRunner">
        <parameters>
          <param name="script.content" value="./do update" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_11" name="Set up .env file" type="simpleRunner">
        <parameters>
          <param name="script.content" value="cp .env.sample .env" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_6" name="Compile All" type="simpleRunner">
        <parameters>
          <param name="script.content" value="./do compile:all" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_3" name="Build a zip file" type="simpleRunner">
        <parameters>
          <param name="script.content" value="./build.sh" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="Mailpoet_HttpsGithubComMailpoetMailpoetGitRefsHeadsMaster" />
    </vcs-settings>
    <requirements />
    <build-triggers>
      <build-trigger id="vcsTrigger" type="vcsTrigger">
        <parameters>
          <param name="branchFilter" value="+:*" />
          <param name="enableQueueOptimization" value="true" />
          <param name="quietPeriodMode" value="DO_NOT_USE" />
        </parameters>
      </build-trigger>
    </build-triggers>
    <cleanup />
  </settings>
</build-type>

