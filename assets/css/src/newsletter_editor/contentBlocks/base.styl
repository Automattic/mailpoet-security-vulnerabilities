$block-hover-highlight-color = $primary-active-color
$block-text-line-height = $text-line-height

.mailpoet_block
  box-sizing: border-box
  position: relative
  float: left
  background-color: inherit
  box-sizing: border-box

  margin-bottom: 20px

  padding-left: 20px
  padding-right: 20px

  & > .mailpoet_block_highlight
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    pointer-events: none
    border: 1px solid $transparent-color

  &:hover > .mailpoet_block_highlight
    border: 1px dashed $block-hover-highlight-color


.mailpoet_block:last-child
  margin-bottom: 0

.mailpoet_content
  position: relative
  line-height: $block-text-line-height

  p, h1, h2, h3, h4, h5, h6
    line-height: $block-text-line-height
    padding: 0
    margin: 0
    font-style: normal
    font-weight: normal

  h1, h2, h3, h4, h5, h6
    margin-bottom: 0.3em

  p
    margin-top: 0
    font-weight: normal

  ul
    padding: 0
    margin-top: 10px
    margin-bottom: 10px

  li
    margin-bottom: 10px
